<div>
  <h1>Edit my task</h1>
    <p></p>
    <div>
      <%= form_for(@task) do |f| %>
        <p><%= f.label :title %></p>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"><% f.text_field :title %></textarea>
        <p><%= f.label :details %></p>
        <textarea class="form-control" id="exampleFormControlTextarea1" rows="1"><% f.text_field :details %></textarea>
        <p><%= f.label :completed %>
        <%= f.check_box :completed %></p>
        <button type="submit" class="btn btn-primary">Submit<% f.submit %></button>
      <% end %>
    </div>
</div>

<p class="fa fa-plus" aria-hidden="true"> <%= link_to "Back to list", tasks_path %></p>

